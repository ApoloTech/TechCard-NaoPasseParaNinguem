<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="presentationlayer.techcard.AboutActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/common_google_signin_btn_text_dark_default">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageButton
            android:background="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="false"/>

        <TextView
            android:id="@+id/txtWhatIs"
            android:textColor="@color/Black"
            android:textSize="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="O que é um TechCard?"
            android:textAlignment="center"
            android:layout_marginTop="45dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/txtTalkingAboutTechCard"
            android:textColor="@color/Black"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Um TechCard é um cartão de visitas virtual onde é possível os usuários compartilharem locais conhecidos como comércios, espaços públicos, eventos ou quaisquer outros tipos de acontecimentos na região onde se localiza. Muito útil se você busca algum serviço ou local específico ou gostaria de informar outras pessoas sobre seus serviços ou comércio(s). "
            android:textAlignment="textStart"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
</ScrollView>